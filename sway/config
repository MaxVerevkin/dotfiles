set $background /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png
exec swaylock -i $background

# Keys (workman)
set $mod Mod4
set $q q
set $d w
set $r e
set $w r
set $b t
set $j y
set $f u
set $u i
set $p o
set $a a
set $s s
set $h d
set $t f
set $g g
set $y h
set $n j
set $e k
set $o l
set $i ;
set $z z
set $x x
set $m c
set $c v
set $v b
set $k n
set $l m

# Workspaces names
set $ws1 "1: Terminal"
set $ws2 "2: Browser"
set $ws3 "3: Code"
set $ws4 "4: School"

# Sway system keys
floating_modifier $mod normal
bindsym --to-code {
    $mod+Shift+$q kill
    $mod+Shift+$c reload

    # Exit sway (logs you out of your Wayland session)
    $mod+Shift+e exec swaynag -t warning -m 'Do you really want to exit sway?' -b 'üö™Ô∏èYes, exit sway' 'swaymsg exit'

    # Moving around:
    $mod+$s focus left
    $mod+$m focus down
    $mod+$t focus up
    $mod+$h focus right
    XF86AudioNext workspace next
    XF86AudioPrev workspace prev

    # Move the focused window with the same, but add Shift
    $mod+Shift+$s move left
    $mod+Shift+$m move down
    $mod+Shift+$t move up
    $mod+Shift+$h move right

    # Workspaces:
    # Switch to workspace
    $mod+1 workspace $ws1
    $mod+2 workspace $ws2
    $mod+3 workspace $ws3
    $mod+4 workspace $ws4
    $mod+5 workspace 5
    $mod+6 workspace 6
    $mod+7 workspace 7
    $mod+8 workspace 8
    $mod+9 workspace 9
    $mod+0 workspace 10
    # Move focused container to workspace
    $mod+Shift+1 move container to workspace $ws1
    $mod+Shift+2 move container to workspace $ws2
    $mod+Shift+3 move container to workspace $ws3
    $mod+Shift+4 move container to workspace $ws4
    $mod+Shift+5 move container to workspace 5
    $mod+Shift+6 move container to workspace 6
    $mod+Shift+7 move container to workspace 7
    $mod+Shift+8 move container to workspace 8
    $mod+Shift+9 move container to workspace 9
    $mod+Shift+0 move container to workspace 10

    # Toggle sticky
    $mod+$a sticky toggle

    # Make the current focus fullscreen
    $mod+$f fullscreen

    # Toggle the current focus between tiling and floating mode
    $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    $mod+space focus mode_toggle

    # Scratchpad:
    $mod+Shift+minus move scratchpad
    $mod+minus scratchpad show
}

## Resizing containers:
mode "resize" {
bindsym --to-code {
    $s resize shrink width 10px
    $h resize grow width 10px
    $m resize shrink height 10px
    $t resize grow height 10px

    # Return to default mode
    Return mode "default"
    Escape mode "default"
}
}
bindsym --to-code $mod+$r mode "resize"


